<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<HBox alignment="TOP_LEFT" minHeight="300" minWidth="600" prefHeight="600.0" prefWidth="800.0" spacing="20" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AdminController">

    <VBox alignment="CENTER_LEFT" spacing="10">
        <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="===== Library System =====" />

        <TextField fx:id="studentNameField" maxWidth="200" minWidth="200" prefWidth="200" promptText="Student Name" />
        <TextField fx:id="studentNimField" maxWidth="200" minWidth="200" prefWidth="200" promptText="Student NIM" />
        <TextField fx:id="studentFacultyField" maxWidth="200" minWidth="200" prefWidth="200" promptText="Student Faculty" />
        <TextField fx:id="studentProgramField" maxWidth="200" minWidth="200" prefWidth="200" promptText="Student Program" />
        <Button fx:id="addStudentButton" onAction="#addStudent" text="Add Student" />

        <TextField fx:id="bookTitleField" maxWidth="200" minWidth="200" prefWidth="200" promptText="Book Title" />
        <TextField fx:id="bookAuthorField" maxWidth="200" minWidth="200" prefWidth="200" promptText="Book Author" />
        <TextField fx:id="bookCategoryField" maxWidth="200" minWidth="200" prefWidth="200" promptText="Book Category (Story, History, Text)" />
        <TextField fx:id="bookStockField" maxWidth="200" minWidth="200" prefWidth="200" promptText="Book Stock" />
        <TextField fx:id="bookDurationField" maxWidth="200" minWidth="200" prefWidth="200" promptText="Book Duration (days)" />
        <Button fx:id="addBookButton" onAction="#addBook" text="Add Book" />

        <Button fx:id="displayStudentsButton" onAction="#displayRegisteredStudents" text="Display Registered Students" />
        <Button fx:id="displayBooksButton" onAction="#displayBooks" text="Display Books" />
        <Button fx:id="logoutButton" onAction="#logout" text="Logout" />
    </VBox>

    <VBox>
        <Pane fx:id="studentTablePane">
            <TableView fx:id="studentTableView" layoutY="-2.0" prefHeight="402.0" prefWidth="324.0">
                <columns>
                    <TableColumn fx:id="studentNameColumn" text="Name" />
                    <TableColumn fx:id="studentNimColumn" text="NIM" />
                    <TableColumn fx:id="studentFacultyColumn" text="Faculty" />
                    <TableColumn fx:id="studentProgramColumn" text="Program" />
                </columns>
            </TableView>
        </Pane>

        <Pane fx:id="bookTablePane">
            <TableView fx:id="bookTableView" layoutY="-190.0" prefHeight="390.0" prefWidth="416.0">
                <columns>
                    <TableColumn fx:id="bookTitleColumn" text="Title" />
                    <TableColumn fx:id="bookAuthorColumn" text="Author" />
                    <TableColumn fx:id="bookCategoryColumn" text="Category" />
                    <TableColumn fx:id="bookStockColumn" text="Stock" />
                    <TableColumn fx:id="bookDurationColumn" prefWidth="94.0" text="Duration" />
                </columns>
            </TableView>
        </Pane>
    </VBox>

</HBox>
